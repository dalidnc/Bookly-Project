@model List<BooklyProject.Entities.Author>
@{
    ViewBag.Title = "AuthorList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h3>Yazarlar</h3>

@{
    int count = 0;
}
<form method="get">
    <div class="form-group">
        <input type="text" name="searchText" placeholder="Aranacak Kelime" />
        <button class="btn btn-dark btn-sm">Ara</button>
    </div>
</form>

<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Yazar Id</th>
        <th>Yazar İsmi</th>
        <th>Yazar Soyismi</th>
        <th>İşlemler</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;

        <tr>
            <th>@count</th>
            <td>@item.AuthorId</td>
            <td>@item.Name</td>
            <td>@item.Surname</td>
            <td>
                <a href="/Author/DeleteAuthor/@item.AuthorId" class="btn btn-outline-danger">
                    <i class="fa fa-trash"></i> Sil
                </a>

                <a href="/Author/UpdateAuthor/@item.AuthorId" class="btn btn-outline-info">
                    <i class="fa fa-pen"></i> Güncelle
                </a>
            </td>
        </tr>
    }
</table>

<br />

<!-- Yeni Yazar Ekle Butonu -->
<td><a href="/Author/AddAuthor/" class="btn btn-outline-dark">Yeni Yazar Ekle</a></td>
