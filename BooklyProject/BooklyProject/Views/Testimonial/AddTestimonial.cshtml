
@{
    ViewBag.Title = "AddTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>AddTestimonial</h2>

<form method="post">
    <label>Yazar Adı</label>
    <input type="text" name="Name" class="form-control" required />
    <br />
    <label>Yorum</label>
    <textarea name="Comment" class="form-control" rows="4" placeholder="Yorumunuzu buraya yazın..." required></textarea>
    <br />

    <label>Puan</label>
    <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" name="Review" value="1">
        <label class="form-check-label">1</label>
    </div>
    <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" name="Review" value="2">
        <label class="form-check-label">2</label>
    </div>
    <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" name="Review" value="3">
        <label class="form-check-label">3</label>
    </div>
    <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" name="Review" value="4">
        <label class="form-check-label">4</label>
    </div>
    <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" name="Review" value="5">
        <label class="form-check-label">5</label>
    </div>
    <br />

    <button class="btn btn-outline-dark"><i class="fa fa-plus-circle"></i> Yorum Ekle</button>
</form>
