@model List<BooklyProject.Entities.Testimonial>
@{
    ViewBag.Title = "Müşteri Yorumları";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Müşteri Yorumları</h2>

<div class="card mb-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        <div>
            <i class="fas fa-table me-1"></i>
            Müşteri Yorumları
        </div>
        <a href="/Testimonial/AddTestimonial" class="btn btn-primary">
            <i class="fas fa-plus me-1"></i> Yeni Yorum Ekle
        </a>
    </div>
    <div class="card-body">
        <table id="datatablesSimple" class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Müşteri Adı</th>
                    <th>Yorum & Görüş</th>
                    <th style="width: 200px;">Puan</th> 
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>Müşteri Adı</th>
                    <th>Yorum & Görüş</th>
                    <th style="width: 200px;">Puan</th>
                    <th>İşlemler</th>
                </tr>
            </tfoot>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Comment</td>
                        <td class="text-center">
                            <div class="d-flex justify-content-center">
                                @for (int i = 0; i < item.Review; i++)
                                {
                                    <i class="fas fa-star text-warning mx-1"></i> 
                                }
                                @for (int i = item.Review; i < 5; i++)
                                {
                                    <i class="far fa-star mx-1"></i>
                                }
                            </div>
                        </td>
                        <td>
                            <a href="/Testimonial/UpdateTestimonial/@item.TestimonialId" class="btn btn-warning btn-sm">
                                <i class="fas fa-edit"></i> Güncelle
                            </a>
                            <a href="/Testimonial/Delete/@item.TestimonialId" class="btn btn-danger btn-sm">
                                <i class="fas fa-trash-alt"></i> Sil
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
