
@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Bookly - Admin Giriş Sayfası</title>
    <link href="~/Templates/sb-admin/css/styles.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
</head>
<body style="background-image: url(https://images.pexels.com/photos/626986/pexels-photo-626986.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2)">
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-5">
                            <div class="card shadow-lg border-0 rounded-lg mt-5" style="background: rgba(255, 255, 255, 0.8); backdrop-filter: blur(10px);">
                                <div class="card-header">
                                    <h3 class="text-center font-weight-light my-4" style="color: #333; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;">Admin Giriş Formu</h3>
                                </div>
                                <div class="card-body">
                                    <form method="post">
                                        <!-- Kullanıcı Adı -->
                                        <div class="form-floating mb-3">
                                            <input class="form-control form-control-lg" name="UserName" type="text" placeholder="Kullanıcı Adı" />
                                            <label for="inputEmail">Kullanıcı Adı</label>
                                        </div>

                                        <!-- Şifre -->
                                        <div class="form-floating mb-3">
                                            <input class="form-control form-control-lg" name="Password" type="password" placeholder="Şifre" />
                                            <label for="inputPassword">Şifre</label>
                                        </div>

                                        <!-- Hatırlama -->
                                        <div class="form-check mb-3">
                                            <input class="form-check-input" id="inputRememberPassword" type="checkbox" value="" />
                                            <label class="form-check-label" for="inputRememberPassword">Beni Hatırla</label>
                                        </div>

                                        <!-- Hata Mesajı -->
                                        <p class="text-danger">
                                            @Html.ValidationSummary()
                                        </p>

                                        <!-- Giriş Butonu -->
                                        <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                                            <button class="btn btn-gradient w-100 py-2 rounded-3" style="background: linear-gradient(45deg, #007bff, #00d2ff); border: none; font-weight: 600; letter-spacing: 1px;">Giriş Yap</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
        <div id="layoutAuthentication_footer">
      
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/Templates/sb-admin/js/scripts.js"></script>
</body>
</html>