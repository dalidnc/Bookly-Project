@model List<BooklyProject.Entities.Message>
@{
    ViewBag.Title = "ListMessage";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<h3>Mesajlar</h3>

@{
    int count = 0;
}

<form method="get">
    <div class="form-group">
        <input type="text" name="searchText" placeholder="Aranacak Kelime" />
        <button class="btn btn-dark btn-sm">Ara</button>
    </div>
</form>

<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>İsim</th>
        <th>Mail</th>
        <th>Mesaj İçeriği</th>
        <th>İşlemler</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;

        <tr>
            <th>@count</th>
            <td>@item.Name</td>
            <td>@item.Email</td>
            <td>@item.MessageContent</td>
            <td>
                <a href="/Message/DeleteMessage/@item.MessageId" class="btn btn-outline-danger">
                    <i class="fa fa-trash"></i> Sil
                </a>

                <a href="/Message/UpdateMessage/@item.MessageId" class="btn btn-outline-info">
                    <i class="fa fa-pen"></i> Güncelle
                </a>
            </td>
        </tr>
    }
</table>

